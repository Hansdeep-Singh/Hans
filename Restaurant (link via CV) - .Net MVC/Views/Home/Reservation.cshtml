
@{
    ViewBag.Title = "Reservation";
    Layout = "~/Views/Shared/_LayoutRest.cshtml";
}


<link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
<link rel="stylesheet" href="/resources/demos/style.css">
<link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/timepicker/1.3.5/jquery.timepicker.min.css">
<script src="https://code.jquery.com/jquery-1.12.4.js"></script>
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/timepicker/1.3.5/jquery.timepicker.min.js"></script>

<script>
    $(function () {
        $("#datepicker").datepicker({
            beforeShowDay: function (date) {
                var day = date.getDay();
                return [(day != 1)];
            }
        });
        $('#timepicker').timepicker({
            timeFormat: 'h:mm p',
            interval: 15,
            minTime: '11:30am',
            maxTime: '10:00pm',
            defaultTime: '11:30pm',
            startTime: '11:30pm',
            dynamic: true,
            dropdown: true,
            scrollbar: true
        });
    });
</script>

@Scripts.Render("~/bundles/jqueryval")
<div class="container">
    <div class="row">
        <div class="col-md-12 bg-dark no-gutters no_pad_mar">
            <img src="~/Content/images/reservation.jpg" class="img-fluid no-gutters" />
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <h2 class="text-center">Reservation</h2>

        </div>
    </div>

    <div class="row border p-4 shadow">
        <div class="col-md-4">
            <h4>Complete the submission form.</h4>
            <p>Reserve your table.</p>
            <h5 class="font-italic">Following are the only hours available for reservation. Thanks </h5>
            <span class="bg-dark font-weight-light text-light pl-2 pr-2 rounded shadow-lg d-block mb-1">Monday - CLOSED</span>
            <span class="bg-danger font-weight-light text-light pl-2 pr-2 rounded shadow-lg d-block mb-1">Tuesday - 5pm to 10pm</span>
            <span class="bg-danger font-weight-light text-light pl-2 pr-2 rounded shadow-lg d-block mb-1">Wednesday - 5pm to 10pm</span>
            <span class="bg-danger font-weight-light text-light pl-2 pr-2 rounded shadow-lg d-block mb-1">Thursday -11:30am to 2:30pm and 5pm to 10pm</span>
            <span class="bg-danger font-weight-light text-light pl-2 pr-2 rounded shadow-lg d-block mb-1">Friday -11:30am to 2:30pm and 5pm to 10pm</span>
            <span class="bg-danger font-weight-light text-light pl-2 pr-2 rounded shadow-lg d-block mb-1">Saturday - 5pm to 10pm</span>
            <span class="bg-danger font-weight-light text-light pl-2 pr-2 rounded shadow-lg d-block mb-1">Sunday - 5pm to 10pm</span>

        </div>
        <div class="col-md-8 bg-light shadow border">
            <h4 class="text-center p-1 bg-dark text-light rounded  no-gutters">Reserve your table.</h4>
            <p>@ViewBag.Message</p>
            @Html.Partial("_ReservationForm")

        </div>


    </div>

</div>

