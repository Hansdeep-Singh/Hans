@model HeroBlaze.Models.RegisterViewModel
@using (Html.BeginForm("Register", "Account", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div class="myform">
        <div class="mytextbox">@Html.TextBoxFor(model => model.Email, new { @class = "textbox nopadding bdrfiv", @placeholder = "Enter email address.", @ID = "email" })</div>
        <div class="myvalidation bdrtwo"> @Html.ValidationMessageFor(model => model.Email)</div>
        <div class="mytextbox">@Html.TextBoxFor(model => model.Password, new { @class = "textbox nopadding bdrfiv", @placeholder = "Enter password.", @ID = "password" })</div>
        <div class="myvalidation bdrtwo"> @Html.ValidationMessageFor(model => model.Password)</div>
        <div class="mytextbox">@Html.TextBoxFor(model => model.ConfirmPassword, new { @class = "textbox nopadding bdrfiv", @placeholder = "Enter password again to match.", @ID = "confirm_password" })</div>
        <div class="myvalidation bdrtwo"> @Html.ValidationMessageFor(model => model.Password)</div>
    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <input type="submit" value="Save" class="btn btn-primary bdrfiv button_trigger" />
    </div>

}
