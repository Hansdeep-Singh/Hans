@using HeroBlaze.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
}


<div class="row">
    <div class="col-md-12">
        <section id="loginForm">
            @using (Html.BeginForm("LoginUser", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
               
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                  
                    <div class="col-md-12">
                        <div id="login_cust">
                            <div class="txtbxdiv">
                                <div class="txtbox">
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control bdrrad txtbx", @placeholder = "Enter Email", @ID = "email" })

                                </div>

                                @*<div class="infoe bdrfiv">Password</div>*@
                                <div class="infoe bdrfiv"><div class="arrow-left bdrfiv"></div><div class="toolbox shadow_out bdrtwo"><p>Your Email</p></div></div>

                                <div class="validation"><p class="bdrfiv">@Html.ValidationMessageFor(m => m.Email)</p></div>

                            </div>
                            <div class="txtbxdiv">
                                <div class="txtbox">
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control bdrrad txtbx", @placeholder = "Enter Password", @ID = "pass" })
                                </div>
                                <div class="infoa bdrfiv"><div class="arrow-left bdrfiv"></div><div class="toolbox shadow_out bdrtwo"><p>Password</p></div></div>
                                <div class="validation"><p class="bdrfiv">@Html.ValidationMessageFor(m => m.Password)</p></div>
                                @*<div class="infoa bdrfiv">Password</div>*@
                            </div>
                            
                            <div class="forgot_password"> @Html.ActionLink("Forgot your password?", "ForgotPassword","Account")</div>
                           
                            <input type="submit" value="Log in" class="buton transone btn-default bdrrad" />
                        </div>
                        </div>
                </div>

                @*<div class="form-group">
                   
                    <div class="col-md-12">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control bdrrad" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>
                </div>*@
